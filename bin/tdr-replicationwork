#!/usr/bin/env perl

use strict;
use warnings;
use FindBin;
use lib "$FindBin::RealBin/../../lib";
use Sys::Hostname;
use CIHM::TDR::Replication;

use Fcntl qw(:DEFAULT :flock);
my $lockfile = '/var/lock/tdr/tdr-replicationwork';

# Only allow one instance to run at a time..
sysopen(FH, $lockfile, O_WRONLY | O_CREAT) 
  or die "can't open lockfile=$lockfile: $!\n";
flock(FH, LOCK_EX | LOCK_NB)
  or exit 0;

CIHM::TDR::Replication->new({ 
    since => "48hours",
#    localdocument => "replicationwork.".hostname,
    configpath => "/etc/canadiana/tdr/tdr.conf"
                            })->replicationwork;

1;
